{
  "name": "Awesome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "assets/logo.png",
    "default_title": "Awesome Extension"
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/main.js"
      ]
    }
  ]
}